{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"es2021"
		],
		"target": "es2018",
		"baseUrl": ".",
		"outDir": "./dist",
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"src",
		"test",
		"vite.config.ts",
		"tsup.config.ts"
	],
	"exclude": [
		"dist"
	]
}
